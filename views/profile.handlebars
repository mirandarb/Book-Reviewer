<div class="profile">
  <h2>Welcome, {{name}}!</h2>
  
  <section class="user-reviews">
    <h3>Your Reviews:</h3>
    {{#if reviews.length}}
      {{#each reviews as |review|}}
        <div class="review">
          <h4>{{review.book.title}}</h4>
          <p>Rating: {{review.rating}}/5</p>
          <p>{{review.content}}</p>
        </div>
      {{/each}}
    {{else}}
      <p>You haven't written any reviews yet.</p>
    {{/if}}
  </section>
</div>